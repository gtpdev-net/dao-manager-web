@model IEnumerable<ORIGINAL_DAO.Manager_REFERENCE_ONLY.Models.Scan>

@{
    ViewData["Title"] = "Repository Scans";
}

<h1>Repository Scans</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">New Scan</a>
</p>

<table id="scansTable" class="table table-striped">
    <thead>
        <tr>
            <th>Scan Date</th>
            <th>Repository Path</th>
            <th>Git Commit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ScanDate.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>@item.RepositoryPath</td>
                <td>
                    <span title="@item.GitCommitHash">@item.ShortCommitHash</span>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#scansTable').DataTable({
                order: [[0, 'desc']], // Sort by Scan Date descending
                pageLength: 25
            });
        });
    </script>
}
