@{
    ViewData["Title"] = "New Scan";
}

<h1>Create New Repository Scan</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label for="repositoryPath" class="form-label">Repository Path</label>
                <input type="text" class="form-control" id="repositoryPath" name="repositoryPath" required 
                       placeholder="C:\path\to\repository" />
                <div class="form-text">Enter the full path to the repository you want to scan.</div>
            </div>
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Start Scan</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div class="alert alert-info mt-4">
    <h5>What does the scan do?</h5>
    <ul>
        <li>Finds all .sln (solution) files in the repository</li>
        <li>Finds all .csproj (C# project) files</li>
        <li>Extracts metadata from each solution and project</li>
        <li>Identifies assemblies that will be generated</li>
        <li>Builds a complete dependency graph</li>
        <li>Stores all data in SQL database</li>
    </ul>
    <p class="mb-0"><strong>Note:</strong> The scan runs in the background, and you'll see real-time progress updates on the next page.</p>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
